@{
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @await Component.InvokeAsync("CategoryGetListSlider")
            </div>
        </div>
    </div>
</section>
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Ürünler</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">Hepsi</li>
                        <li data-filter=".6">Et Ürünleri</li>
                        <li data-filter=".7">Tavuk Ürünleri</li>
                        <li data-filter=".8">Deniz Ürünleri</li>
                        <li data-filter=".9">Süt Ürünleri</li>
                    </ul>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("FoodGetList")
    </div>
</section>

<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="~/ogani/img/banner/banner-1.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="~/ogani/img/banner/banner-2.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
