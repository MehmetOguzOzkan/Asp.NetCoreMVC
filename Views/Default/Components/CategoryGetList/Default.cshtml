@model IEnumerable<ProjectWEB.Models.Category>

<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Kategoriler</span>
                    </div>
                    <ul>
                        @foreach(var item in Model)
                        {
                            <li><a asp-controller="Default" asp-action="CategoryDetails" asp-route-id="@item.CategoryID">@item.CategoryName</a></li>  
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <input type="text" placeholder="Neye ihtiyacın var?">
                            <button type="submit" class="site-btn">ARA</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+90 322 515 0123</h5>
                            <span>7/24 hizmetinizde</span>
                        </div>
                    </div>
                </div>
                <div class="hero__item set-bg" data-setbg="/arkaplan.jpg">
                    <div class="hero__text">
                        <span style="background-color:silver">ÜRETİCİDEN EVİNİZE</span>
                        <h2 style="background-color:silver">Taze <br />Kaliteli <br />Doğal</h2>
                        <p style="background-color:silver">Ücretsiz Anında Kapınızda</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>