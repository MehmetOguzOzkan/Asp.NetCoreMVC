@model IEnumerable<ProjectWEB.Models.Food>

@{
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

@inject LanguageService language

<section class="breadcrumb-section set-bg" data-setbg="/ogani/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>@language.Getkey("Arama Sonucu")</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="product spad">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="@item.ImageURL">
                            <ul class="featured__item__pic__hover">
                                <li><a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@item.FoodID"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-controller="Default" asp-action="FoodDetails" asp-route-id="@item.FoodID">@item.Name</a></h6>
                            <h5>@item.Price ₺</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>